<% if Current.owner&.logo&.attached? || Current.owner&.company_name.present? %>
  <section class="branding-hero container mb-4">
    <div class="branding-card d-flex flex-column flex-md-row align-items-center justify-content-between px-4 py-3">
      <div class="branding-logo-wrapper d-flex align-items-center justify-content-center mb-3 mb-md-0">
        <% if Current.owner&.logo&.attached? %>
          <%= image_tag Current.owner.logo, alt: "Logo de #{Current.owner.company_name.presence || 'la compañía'}", class: 'branding-logo img-fluid' %>
        <% else %>
          <div class="branding-logo placeholder-branding-logo d-flex align-items-center justify-content-center">
            <span class="fw-semibold text-secondary">Sin logo</span>
          </div>
        <% end %>
      </div>

      <% if Current.owner&.company_name.present? %>
        <div class="text-center text-md-start">
          <p class="branding-eyebrow text-uppercase fw-semibold mb-1">Panel de control</p>
          <h1 class="branding-title mb-0"><%= Current.owner.company_name %></h1>
          <p class="text-secondary mb-0">Gestiona clientes y colecciones desde un solo lugar.</p>
        </div>
      <% end %>
    </div>
  </section>
<% end %>