<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="text-center mb-4">Iniciar sesión</h2>

      <% owner_mode = params[:role] == "owner" %>

      <div class="btn-group w-100 mb-4" role="group" aria-label="Seleccionar tipo de inicio de sesión">
        <%= link_to "Usuario normal", new_user_session_path(role: :user), class: "btn btn-outline-primary #{'active' unless owner_mode}" %>
        <%= link_to "Empresa", new_owner_session_path, class: "btn btn-outline-primary #{'active' if owner_mode}" %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Email -->
        <div class="mb-3">
          <%= f.label :email, "Correo electrónico", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <%= f.label :password, "Contraseña", class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!-- Recordarme -->
        <% if devise_mapping.rememberable? %>
          <div class="form-check mb-3">
            <%= f.check_box :remember_me, class: "form-check-input", id: "remember_me" %>
            <%= f.label :remember_me, "Recuérdame", class: "form-check-label", for: "remember_me" %>
          </div>
        <% end %>

        <!-- Botón login -->
        <div class="d-grid mb-4">
          <%= f.submit "Entrar", class: "btn btn-primary" %>
        </div>
      <% end %>

      <!-- Links adicionales -->
      <div class="text-center">
        <%= render "devise/shared/links" %>
        <div class="mt-3">
          <%= link_to "¿Tienes un token de invitación?", new_user_registration_path, class: "btn btn-link" %>
        </div>
        <div class="mt-3">
          <% if user_signed_in? && current_user.guest? %>
            <%= button_to "Transformarme en usuario normal", guest_upgrade_path, method: :post, class: "btn btn-secondary w-100" %>
          <% else %>
            <p class="text-muted mb-0">Inicia sesión como invitado para habilitar el cambio a usuario normal.</p>
          <% end %>
        </div>        
      </div>
    </div>
  </div>
</div>

